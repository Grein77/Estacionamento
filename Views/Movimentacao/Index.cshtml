@model IEnumerable<Park.Victor.Grein.Benner.Models.Movimentacao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movimentação</h2>

<p>
    @Html.ActionLink("Registrar Entrada", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duracao)
        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Entrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Saida)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duracao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TempoCobrado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Entrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Saida)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MovimentacaoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MovimentacaoID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MovimentacaoID }) |
            @Html.ActionLink("Registrar Saída", "Exit", new { id=item.MovimentacaoID })
        </td>
    </tr>
}

</table>
